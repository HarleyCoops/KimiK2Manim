# E2B Sandbox Environment Configuration Template
# Copy this file to .env and fill in your values

# REQUIRED: Moonshot AI API Configuration
MOONSHOT_API_KEY=sk-your-moonshot-api-key-here

# Optional: Model Configuration
# Default: kimi-k2-0905-preview
KIMI_MODEL=kimi-k2-0905-preview

# Optional: Moonshot API Base URL
# Default: https://api.moonshot.ai/v1
MOONSHOT_BASE_URL=https://api.moonshot.ai/v1

# Optional: Thinking Mode Configuration
# Options: heavy, medium, light, true, false
# Default: heavy
KIMI_ENABLE_THINKING=heavy

# Optional: Tool Usage Configuration
# Options: true, false
# Default: true
KIMI_USE_TOOLS=true

# Optional: Sandbox Mode
# Options: exploration, rendering, interactive, batch
# Default: exploration
SANDBOX_MODE=exploration

# Optional: Exploration Settings
# Maximum depth for prerequisite exploration (1-10)
# Default: 3
MAX_DEPTH=3

# Optional: Manim Configuration
# Quality: l (low/480p), m (medium/720p), h (high/1080p), k (4k/2160p)
# Default: l
MANIM_QUALITY=l

# Optional: Resource Limits
MAX_RENDER_TIME=300
MAX_TREE_DEPTH=5
MAX_NARRATIVE_WORDS=3000

# Optional: Output Directories
# These will be created if they don't exist
OUTPUT_DIR=/home/user/kimik2/output
MEDIA_DIR=/home/user/kimik2/media
LOG_DIR=/home/user/kimik2/logs
